@page
@model BikeService.Pages.ServiceTypes.DeleteModel
@{ ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml"; }

<br />
<h2 class="text-success">Details Service Type</h2>
<br />
<form method="post">
    <div class="border backgroundwhite">
        <input type="hidden" asp-for="ServiceType.Id" />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ServiceType.Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="ServiceType.Name" class="form-control" readonly />
            </div>
            <span asp-validation-for="ServiceType.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ServiceType.Price"></label>
            </div>
            <div class="col-5">
                <input asp-for="ServiceType.Price" class="form-control" readonly />
            </div>
            <span asp-validation-for="ServiceType.Price" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <div class="row">
                    <div class="col-6">
                        <input type="submit" class="btn btn-danger form-control" value="Delete" onclick="return confirm('Are you sure?')"/>
                    </div>
                    <div class="col-6">
                        <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
