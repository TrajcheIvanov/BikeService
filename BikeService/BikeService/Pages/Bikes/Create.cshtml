@page
@model BikeService.Pages.Bikes.CreateModel
@{
}

<br />
<h2 class="text-success">Add New Bike</h2>
<br />
<form method="post">
    <div class="border backgroundwhite">
        <input hidden asp-for="Bike.UserId" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Bike.VIN"></label>
            </div>
            <div class="col-5">
                <input asp-for="Bike.VIN" class="form-control" />
            </div>
            <span asp-validation-for="Bike.VIN" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Bike.Make"></label>
            </div>
            <div class="col-5">
                <input asp-for="Bike.Make" class="form-control" />
            </div>
            <span asp-validation-for="Bike.Make" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Bike.Model"></label>
            </div>
            <div class="col-5">
                <input asp-for="Bike.Model" class="form-control" />
            </div>
            <span asp-validation-for="Bike.Model" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Bike.Style"></label>
            </div>
            <div class="col-5">
                <input asp-for="Bike.Style" class="form-control" />
            </div>
            <span asp-validation-for="Bike.Style" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Bike.Year"></label>
            </div>
            <div class="col-5">
                <input asp-for="Bike.Year" class="form-control" />
            </div>
            <span asp-validation-for="Bike.Year" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Bike.Color"></label>
            </div>
            <div class="col-5">
                <input asp-for="Bike.Color" class="form-control" />
            </div>
            <span asp-validation-for="Bike.Color" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_CreateAndBackToListPartial" />
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}