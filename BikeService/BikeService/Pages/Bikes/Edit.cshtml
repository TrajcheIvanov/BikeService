@page
@model BikeService.Pages.Bikes.EditModel
@{
}

<br />
<h2 class="text-dark">Edit Bike Details</h2>
<br />
<form method="post">
    <div class=" border  backgroundwhite">
        <input type="hidden" asp-for="Bike.Id" />
        <input type="hidden" asp-for="Bike.UserId" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row ">
            <div class="col-2">
                <label asp-for="Bike.VIN" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Bike.VIN" class="form-control" />
            </div>
            <span asp-validation-for="Bike.VIN" class="text-danger"></span>
        </div>
        <div class="form-group row ">
            <div class="col-2">
                <label asp-for="Bike.Make" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Bike.Make" class="form-control" />
            </div>
            <span asp-validation-for="Bike.Make" class="text-danger"></span>
        </div>
        <div class="form-group row ">
            <div class="col-2">
                <label asp-for="Bike.Model" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Bike.Model" class="form-control" />
            </div>
            <span asp-validation-for="Bike.Model" class="text-danger"></span>
        </div>
        <div class="form-group row ">
            <div class="col-2">
                <label asp-for="Bike.Style" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Bike.Style" class="form-control" />
            </div>
            <span asp-validation-for="Bike.Style" class="text-danger"></span>
        </div>
        <div class="form-group row ">
            <div class="col-2">
                <label asp-for="Bike.Year" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Bike.Year" class="form-control" />
            </div>
            <span asp-validation-for="Bike.Year" class="text-danger"></span>
        </div>
        <div class="form-group row ">
            <div class="col-2">
                <label asp-for="Bike.Kilometers" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Bike.Kilometers" class="form-control" />
            </div>
            <span asp-validation-for="Bike.Kilometers" class="text-danger"></span>
        </div>
        <div class="form-group row ">
            <div class="col-2">
                <label asp-for="Bike.Color" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Bike.Color" class="form-control" />
            </div>
            <span asp-validation-for="Bike.Color" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <div class="row">
                    <div class="col-6">
                        <input type="submit" class="btn btn-primary form-control" value="Update" />
                    </div>
                    <div class="col-6">
                        <a asp-page="Index" asp-route-userId="@Model.Bike.UserId" class="btn btn-success form-control">Back to List</a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
